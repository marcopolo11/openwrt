
config odhcpd 'odhcpd'
	option maindhcp '1'
	option leasefile '/tmp/hosts/odhcpd'
	option leasetrigger '/usr/sbin/odhcpd-update'

config dhcp 'lan'
	option dhcpv4 'server'
	option dhcpv6 'disabled'
	option interface 'lan'
	option start '100'
	option limit '150'
	list domain 'home'
	list dns '8.8.8.8'
	list dns '1.1.1.1'
	option ignore '0'

config dhcp 'wan'
	option interface 'wan'
	option ignore '1'